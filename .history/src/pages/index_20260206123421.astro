---
import Layout from '../layouts/Layout.astro';

const base = import.meta.env.BASE_URL;
const withBase = (path: string) => `${base}${path.replace(/^\//, '')}`;
---

<Layout
	title="Nim Dvir, PhD"
	description="UX and AI researcher; Visiting Assistant Professor at SUNY Albany. Research in HCI, information engagement, and responsible AI."
>
	<!-- Hero Banner with Particles -->
	<div class="hero-banner">
		<div id="particles-js"></div>
		<div class="hero-content">
			<div class="hero-image">
				<img
					src="https://res.cloudinary.com/dkndq6lyz/image/upload/f_auto/q_auto/headshot2025_mgcevo?_a=BAMAAAhK0"
					alt="Portrait of Nim Dvir"
					loading="eager"
				/>
			</div>
			<div class="hero-text">
				<h1>Nim Dvir, PhD</h1>
				<span class="badge">Academic Lecturer and Researcher</span>
				<p class="subtitle">
					Visiting Assistant Professor<br />
					The State University of New York at Albany
				</p>
				<p class="intro">
					Human-computer interaction researcher focused on information engagement,
					responsible AI, and data-driven design.
				</p>
				<div class="cta-buttons">
					<a href="mailto:ndvir@albany.edu" class="btn btn-primary">
						<i class="fas fa-envelope"></i> Contact Me
					</a>
				</div>
			</div>
		</div>
	</div>

	<!-- Social Links Bar -->
	<section class="social-bar">
		<a href="https://www.linkedin.com/in/nimdvir/" target="_blank" rel="noreferrer"><i class="fab fa-linkedin"></i> LinkedIn</a>
		<a href="https://scholar.google.com/citations?user=vzFELz4AAAAJ&hl=en" target="_blank" rel="noreferrer"><i class="fas fa-graduation-cap"></i> Scholar</a>
		<a href="https://orcid.org/0000-0001-5462-3180" target="_blank" rel="noreferrer"><i class="fab fa-orcid"></i> ORCID</a>
		<a href="https://www.researchgate.net/profile/Nim-Dvir" target="_blank" rel="noreferrer"><i class="fab fa-researchgate"></i> ResearchGate</a>
		<a href="https://www.instagram.com/nimdvir/" target="_blank" rel="noreferrer"><i class="fab fa-instagram"></i> Instagram</a>
	</section>

	<section class="intro-section">
		<h2 class="typing-line" aria-label="Hello, I'm Nimrod (Nim) Dvir.">
			<span>Hello, I'm Nimrod (Nim) Dvir.</span>
		</h2>
		<p>
			I am a UX and AI researcher and a lecturer in the Department of Information Systems and Business
			Analytics at the Massry School of Business, University at Albany (SUNY). I hold a PhD in
			Information Science with a specialization in Human-Computer Interaction (HCI), and my work
			focuses on how people engage with information systems, responsible AI, and data-driven design.
		</p>
		<p>
			My research and teaching draw on human-computer interaction, communication, and behavioral
			economics to explore how design, language, and algorithmic technologies shape understanding,
			participation, and decision-making. Feel free to reach out regarding research collaborations,
			speaking engagements, consulting opportunities, or simply to connect at
			<a href="mailto:ndvir@albany.edu">ndvir@albany.edu</a>.
		</p>
	</section>

	<!-- Main Content Cards -->
	<section class="content-section">
		<h2 class="section-title"><i class="fas fa-compass"></i> What I Do</h2>
		<div class="cards-grid">
			<a href={withBase('/research')} class="content-card">
				<div class="card-icon"><i class="fas fa-microscope"></i></div>
				<h3>Research</h3>
				<p>User engagement, responsible AI, and computational linguistics. Methods include usability studies, surveys, and data science.</p>
				<span class="card-link">View research <i class="fas fa-arrow-right"></i></span>
			</a>
			<a href={withBase('/projects')} class="content-card">
				<div class="card-icon"><i class="fas fa-briefcase"></i></div>
				<h3>Projects</h3>
				<p>UX research collaborations with industry partners. Evidence-driven design decisions published at leading HCI venues.</p>
				<span class="card-link">See projects <i class="fas fa-arrow-right"></i></span>
			</a>
			<a href={withBase('/teaching')} class="content-card">
				<div class="card-icon"><i class="fas fa-chalkboard-teacher"></i></div>
				<h3>Teaching</h3>
				<p>Undergraduate, graduate, and MBA courses on design and AI. Coaching research teams to ship impactful solutions.</p>
				<span class="card-link">View courses <i class="fas fa-arrow-right"></i></span>
			</a>
			<a href={withBase('/blog')} class="content-card">
				<div class="card-icon"><i class="fas fa-pen-nib"></i></div>
				<h3>Writing</h3>
				<p>Research notes, media interviews, and essays on human-centered AI, information behavior, and cultural commentary.</p>
				<span class="card-link">Read writing <i class="fas fa-arrow-right"></i></span>
			</a>
		</div>
	</section>

	<!-- Featured Work Gallery -->
	<section class="content-section">
		<h2 class="section-title"><i class="fas fa-images"></i> Featured Work</h2>
		<div class="gallery-grid">
			<a href={withBase('/projects')} class="gallery-item">
				<img src={withBase('/images/sticky.png')} alt="Sticky Words research" loading="lazy" />
				<div class="gallery-overlay">
					<span>Sticky Words</span>
					<small>Dissertation Research</small>
				</div>
			</a>
			<a href={withBase('/projects')} class="gallery-item">
				<img src={withBase('/images/info-engagement.png')} alt="Information Engagement" loading="lazy" />
				<div class="gallery-overlay">
					<span>Information Engagement</span>
					<small>Research Framework</small>
				</div>
			</a>
			<a href={withBase('/projects')} class="gallery-item">
				<img src={withBase('/images/costco.png')} alt="Costco project" loading="lazy" />
				<div class="gallery-overlay">
					<span>Costco Mobile</span>
					<small>UX Research</small>
				</div>
			</a>
			<a href={withBase('/projects')} class="gallery-item">
				<img src={withBase('/images/dexcom-new.png')} alt="Dexcom project" loading="lazy" />
				<div class="gallery-overlay">
					<span>Dexcom</span>
					<small>Healthcare UX</small>
				</div>
			</a>
		</div>
	</section>

	<!-- Two Column: Education & Skills -->

<script src={withBase('/js/particles.js')} is:inline></script>
<script is:inline>
	document.addEventListener('DOMContentLoaded', function() {
		if (typeof particlesJS !== 'undefined') {
			particlesJS('particles-js', {
				particles: {
					number: { value: 80, density: { enable: true, value_area: 900 } },
					color: { value: '#ffffff' },
					shape: { type: 'circle' },
					opacity: { value: 0.6, random: true },
					size: { value: 3, random: true },
					line_linked: { enable: true, distance: 150, color: '#ffffff', opacity: 0.4, width: 1 },
					move: { enable: true, speed: 1.5, direction: 'none', random: true, straight: false, out_mode: 'out' }
				},
				interactivity: {
					detect_on: 'canvas',
					events: {
						onhover: { enable: true, mode: 'grab' },
						onclick: { enable: true, mode: 'push' },
						resize: true
					},
					modes: {
						grab: { distance: 140, line_linked: { opacity: 1 } },
						push: { particles_nb: 4 }
					}
				},
				retina_detect: true
			});
		}
	});
</script>
</Layout>

<style>
	/* Hero Banner */
	.hero-banner {
		position: relative;
		width: 100vw;
		margin-left: calc(-50vw + 50%);
		margin-top: -24px;
		background: linear-gradient(135deg, #1e3a5f 0%, #0f172a 40%, #1e1b4b 100%);
		padding: 60px 24px;
		margin-bottom: 0;
	}

	#particles-js {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: 1;
	}

	.hero-content {
		position: relative;
		z-index: 2;
		max-width: 1100px;
		margin: 0 auto;
		display: grid;
		grid-template-columns: 300px 1fr;
		gap: 48px;
		align-items: center;
	}

	.hero-text {
		color: #fff;
	}

	.badge {
		display: inline-block;
		background: rgba(255, 255, 255, 0.15);
		border: 1px solid rgba(255, 255, 255, 0.3);
		padding: 6px 16px;
		border-radius: 999px;
		font-size: 13px;
		font-weight: 600;
		text-transform: uppercase;
		letter-spacing: 0.1em;
		margin-bottom: 16px;
	}

	.hero-text h1 {
		font-size: 56px;
		margin: 0 0 12px;
		letter-spacing: -0.03em;
		font-weight: 700;
		line-height: 1.1;
	}

	.hero-text .subtitle {
		font-size: 20px;
		margin: 0 0 20px;
		opacity: 0.9;
		line-height: 1.4;
	}

	.hero-text .intro {
		font-size: 17px;
		margin: 0 0 28px;
		opacity: 0.85;
		line-height: 1.6;
		max-width: 500px;
	}

	.cta-buttons {
		display: flex;
		gap: 12px;
		flex-wrap: wrap;
	}

	.btn {
		display: inline-flex;
		align-items: center;
		gap: 8px;
		padding: 14px 24px;
		border-radius: 12px;
		font-weight: 600;
		text-decoration: none;
		transition: all 0.2s ease;
		font-size: 15px;
	}

	.btn-primary {
		background: #fff;
		color: #0f172a;
	}

	.btn-primary:hover {
		background: #f1f5f9;
		transform: translateY(-2px);
	}

	.btn-secondary {
		background: rgba(255, 255, 255, 0.1);
		color: #fff;
		border: 1px solid rgba(255, 255, 255, 0.3);
	}

	.btn-secondary:hover {
		background: rgba(255, 255, 255, 0.2);
		transform: translateY(-2px);
	}

	.hero-image img {
		width: 100%;
		height: auto;
		aspect-ratio: 1;
		border-radius: 50%;
		border: 4px solid rgba(255, 255, 255, 0.2);
		box-shadow: 0 24px 48px rgba(0, 0, 0, 0.3);
		object-fit: cover;
		object-position: 60% 50%;
	}

	/* Social Bar */
	.social-bar {
		display: flex;
		justify-content: center;
		gap: 12px;
		flex-wrap: wrap;
		padding: 24px;
		background: #fff;
		border-bottom: 1px solid #e5e7eb;
		margin-bottom: 40px;
	}

	.social-bar a {
		display: inline-flex;
		align-items: center;
		gap: 6px;
		padding: 10px 16px;
		border-radius: 10px;
		background: #f8fafc;
		color: #374151;
		text-decoration: none;
		font-weight: 600;
		font-size: 14px;
		border: 1px solid #e5e7eb;
		transition: all 0.2s ease;
	}

	.social-bar a:hover {
		background: #0f172a;
		color: #fff;
		border-color: #0f172a;
		transform: translateY(-2px);
	}

	/* Intro Section */
	.intro-section {
		max-width: 900px;
		margin: 32px auto 56px;
		padding: 0 24px;
		color: #0f172a;
	}

	.intro-section p {
		font-size: 16px;
		line-height: 1.8;
		margin: 0 0 16px;
		color: #1f2937;
	}

	.intro-section a {
		color: #2563eb;
		font-weight: 600;
		text-decoration: none;
	}

	.intro-section a:hover {
		text-decoration: underline;
	}

	.typing-line {
		font-family: 'Share Tech Mono', 'Courier New', monospace;
		font-size: 22px;
		font-weight: 600;
		margin: 0 0 18px;
		color: #0f172a;
	}

	.typing-line span {
		display: inline-block;
		white-space: nowrap;
		overflow: hidden;
		border-right: 2px solid #0f172a;
		width: 0;
		will-change: width;
		animation: typing 2.6s steps(29, end) 0.2s forwards, blink 0.7s step-end infinite 0.2s;
	}

	@keyframes typing {
		from {
			width: 0;
		}
		to {
			width: 29ch;
		}
	}

	@keyframes blink {
		0%,
		100% {
			border-color: transparent;
		}
		50% {
			border-color: #0f172a;
		}
	}


	/* Content Sections */
	.content-section {
		max-width: 1100px;
		margin: 0 auto 48px;
		padding: 0 24px;
	}

	.section-title {
		font-size: 24px;
		margin: 0 0 24px;
		color: #0f172a;
		display: flex;
		align-items: center;
		gap: 12px;
	}

	.section-title i {
		color: #3b82f6;
	}

	/* Content Cards Grid */
	.cards-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
		gap: 20px;
	}

	.content-card {
		background: #fff;
		border: 1px solid #e5e7eb;
		border-radius: 16px;
		padding: 28px;
		text-decoration: none;
		color: inherit;
		transition: all 0.2s ease;
		display: flex;
		flex-direction: column;
	}

	.content-card:hover {
		border-color: #3b82f6;
		box-shadow: 0 12px 32px rgba(59, 130, 246, 0.15);
		transform: translateY(-4px);
	}

	.card-icon {
		width: 56px;
		height: 56px;
		border-radius: 14px;
		background: linear-gradient(135deg, #3b82f6, #1e40af);
		display: flex;
		align-items: center;
		justify-content: center;
		margin-bottom: 20px;
		font-size: 24px;
		color: #fff;
	}

	.content-card h3 {
		margin: 0 0 10px;
		font-size: 20px;
		color: #0f172a;
	}

	.content-card p {
		margin: 0 0 16px;
		color: #6b7280;
		font-size: 15px;
		line-height: 1.6;
		flex-grow: 1;
	}

	.card-link {
		color: #3b82f6;
		font-weight: 600;
		font-size: 14px;
		display: flex;
		align-items: center;
		gap: 6px;
	}

	/* Gallery Grid */
	.gallery-grid {
		display: grid;
		grid-template-columns: repeat(4, 1fr);
		gap: 16px;
	}

	.gallery-item {
		position: relative;
		aspect-ratio: 1;
		border-radius: 16px;
		overflow: hidden;
		text-decoration: none;
	}

	.gallery-item img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		transition: transform 0.3s ease;
	}

	.gallery-item:hover img {
		transform: scale(1.05);
	}

	.gallery-overlay {
		position: absolute;
		inset: 0;
		background: linear-gradient(to top, rgba(0, 0, 0, 0.8) 0%, transparent 60%);
		display: flex;
		flex-direction: column;
		justify-content: flex-end;
		padding: 20px;
		color: #fff;
	}

	.gallery-overlay span {
		font-weight: 700;
		font-size: 16px;
	}

	.gallery-overlay small {
		opacity: 0.8;
		font-size: 13px;
	}


	/* Responsive */
	@media (max-width: 900px) {
		.hero-content {
			grid-template-columns: 1fr;
			text-align: center;
		}

		.hero-text h1 {
			font-size: 40px;
		}

		.hero-text .intro {
			max-width: 100%;
		}

		.cta-buttons {
			justify-content: center;
		}

		.hero-image {
			max-width: 280px;
			margin: 0 auto;
		}

		.gallery-grid {
			grid-template-columns: repeat(2, 1fr);
		}

		.two-column {
			grid-template-columns: 1fr;
		}
	}

	@media (max-width: 600px) {
		.hero-banner {
			padding: 40px 16px;
		}

		.hero-text h1 {
			font-size: 32px;
		}

		.hero-text .subtitle {
			font-size: 16px;
		}

		.cards-grid {
			grid-template-columns: 1fr;
		}

		.social-bar {
			gap: 8px;
		}

		.social-bar a {
			padding: 8px 12px;
			font-size: 13px;
		}
	}
</style>
