---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import RelatedInterviews from '../../components/RelatedInterviews.astro';

const base = import.meta.env.BASE_URL;
const withBase = (path: string) => `${base}${path.replace(/^\//, '')}`;

export async function getStaticPaths() {
	const interviews = await getCollection('interviews');
	return interviews.map((interview) => ({
		params: { slug: interview.slug },
		props: { interview },
	}));
}

const { interview } = Astro.props;
const { Content } = await interview.render();
---

<Layout title={interview.data.title} description={interview.data.summary}>
	<article class="interview">
		<header class="interview-header">
			<a href={withBase('/blog')} class="back-link"><i class="fas fa-arrow-left"></i> Back to Writing</a>
			<div class="meta">
				<span class="date"><i class="far fa-calendar"></i> {interview.data.date}</span>
				{interview.data.sourceUrl && (
					<span class="source">
						<i class="fas fa-newspaper"></i> 
						<a href={interview.data.sourceUrl} target="_blank" rel="noreferrer">{interview.data.source}</a>
					</span>
				)}
			</div>
			<h1>{interview.data.title}</h1>
			<p class="byline">By <strong>Nimrod Dvir</strong></p>
			<div class="tags">
				{interview.data.tags.map((tag) => (
					<span class="tag">{tag}</span>
				))}
			</div>
		</header>

		{interview.data.image && (
			<div class="hero-image">
				<img src={interview.data.image} alt={interview.data.title} class="portrait" />
			</div>
		)}

		<div class="content">
			<Content />
		</div>

		<RelatedInterviews currentSlug={`interviews/${interview.slug}`} />
	</article>
</Layout>

<style>
	.interview {
		max-width: 760px;
		margin: 0 auto;
	}

	.back-link {
		display: inline-flex;
		align-items: center;
		gap: 8px;
		color: #6b7280;
		text-decoration: none;
		font-size: 14px;
		margin-bottom: 20px;
		transition: color 0.2s;
	}

	.back-link:hover {
		color: #3b82f6;
	}

	.interview-header {
		margin-bottom: 32px;
	}

	.meta {
		display: flex;
		gap: 20px;
		font-size: 14px;
		color: #6b7280;
		margin-bottom: 12px;
	}

	.meta a {
		color: #3b82f6;
		text-decoration: none;
	}

	.meta a:hover {
		text-decoration: underline;
	}

	h1 {
		font-size: 36px;
		letter-spacing: -0.02em;
		margin: 0 0 12px;
		line-height: 1.2;
	}

	.byline {
		color: #4b5563;
		margin: 0 0 16px;
	}

	.tags {
		display: flex;
		gap: 8px;
		flex-wrap: wrap;
	}

	.tag {
		background: #ede9fe;
		color: #7c3aed;
		padding: 4px 12px;
		border-radius: 999px;
		font-size: 13px;
		font-weight: 600;
	}

	.hero-image {
		text-align: center;
		margin-bottom: 32px;
	}

	.portrait {
		width: 200px;
		height: 200px;
		border-radius: 50%;
		object-fit: cover;
		border: 4px solid #e5e7eb;
		box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
	}

	.content {
		font-size: 18px;
		line-height: 1.8;
		color: #1f2937;
	}

	.content :global(p:first-of-type) {
		font-size: 20px;
		color: #374151;
		border-left: 4px solid #3b82f6;
		padding-left: 20px;
		margin-bottom: 32px;
	}

	.content :global(h2) {
		font-size: 24px;
		margin: 40px 0 16px;
		letter-spacing: -0.01em;
	}

	.content :global(p) {
		margin: 0 0 16px;
	}

	.content :global(ul) {
		margin: 0 0 16px;
		padding-left: 24px;
	}

	.content :global(li) {
		margin-bottom: 8px;
	}

	.content :global(blockquote) {
		background: #f8fafc;
		border-left: 4px solid #7c3aed;
		padding: 20px 24px;
		margin: 24px 0;
		border-radius: 0 8px 8px 0;
		font-style: italic;
		color: #374151;
	}

	.content :global(hr) {
		margin: 48px 0 24px;
		border: none;
		border-top: 1px solid #e5e7eb;
	}

	@media (max-width: 600px) {
		h1 {
			font-size: 28px;
		}

		.content {
			font-size: 16px;
		}

		.content :global(p:first-of-type) {
			font-size: 18px;
		}
	}
</style>
