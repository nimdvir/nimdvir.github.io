---
import Layout from '../layouts/Layout.astro';

const base = import.meta.env.BASE_URL;
const withBase = (path: string) => `${base}${path.replace(/^\//, '')}`;
---

<Layout
	title="Nim Dvir, PhD"
	description="UX and AI researcher; Visiting Assistant Professor at SUNY Albany. Research in HCI, information engagement, and responsible AI."
>
	<!-- Hero Banner with Particles -->
	<div class="hero-banner">
		<div id="particles-js"></div>
		<div class="hero-content">
			<div class="hero-text">
				<span class="badge">UX + AI Researcher</span>
				<h1>Nim Dvir, PhD</h1>
				<p class="subtitle">Visiting Assistant Professor<br/>The State University of New York at Albany</p>
				<p class="intro">
					Human-computer interaction researcher focused on information engagement, 
					responsible AI, and data-driven design.
				</p>
				<div class="cta-buttons">
					<a href="mailto:ndvir@albany.edu" class="btn btn-primary">
						<i class="fas fa-envelope"></i> Contact Me
					</a>
					<a href={withBase('/about')} class="btn btn-secondary">
						<i class="fas fa-user"></i> About Me
					</a>
				</div>
			</div>
			<div class="hero-image">
				<img src={withBase('/images/headshot2025.jpg')} alt="Portrait of Nim Dvir" />
			</div>
		</div>
	</div>

	<!-- Social Links Bar -->
	<section class="social-bar">
		<a href="https://www.linkedin.com/in/nimdvir/" target="_blank" rel="noreferrer"><i class="fab fa-linkedin"></i> LinkedIn</a>
		<a href="https://scholar.google.com/citations?user=vzFELz4AAAAJ&hl=en" target="_blank" rel="noreferrer"><i class="fas fa-graduation-cap"></i> Scholar</a>
		<a href="https://orcid.org/0000-0001-5462-3180" target="_blank" rel="noreferrer"><i class="fab fa-orcid"></i> ORCID</a>
		<a href="https://www.researchgate.net/profile/Nim-Dvir" target="_blank" rel="noreferrer"><i class="fab fa-researchgate"></i> ResearchGate</a>
		<a href="https://www.instagram.com/nimdvir/" target="_blank" rel="noreferrer"><i class="fab fa-instagram"></i> Instagram</a>
	</section>

	<!-- Extended Bio Section -->
	<section class="content-section intro-container">
		<div class="hello-wrapper">
			<span class="typewriter">Hello!</span>
		</div>
		
		<div class="bio-text">
			<p class="lead">I‚Äôm Nimrod (Nim) Dvir, Ph.D.</p>
			<p>
				I am a Mixed Methods Researcher and Lecturer at the University at Albany‚Äôs Massry School of Business, specializing in Human-Computer Interaction (HCI) and Business Analytics. My work sits at the intersection of data science and behavioral psychology, where I use computational linguistics and AI-driven modeling to understand and optimize how people engage with digital information.
			</p>

			<h3>At a Glance</h3>
			<div class="stats-grid">
				<div class="stat-card">
					<span class="stat-emoji">üéì</span>
					<span class="stat-number">4</span>
					<span class="stat-label">Degrees</span>
					<span class="stat-sub">Because one was never enough</span>
				</div>
				<div class="stat-card">
					<span class="stat-emoji">üìö</span>
					<span class="stat-number">15+</span>
					<span class="stat-label">Courses Taught</span>
				</div>
				<div class="stat-card">
					<span class="stat-emoji">üèÜ</span>
					<span class="stat-number">11</span>
					<span class="stat-label">Awards</span>
					<span class="stat-sub">Yes, I counted</span>
				</div>
				<div class="stat-card">
					<span class="stat-emoji">üì∫</span>
					<span class="stat-number">20+</span>
					<span class="stat-label">Media Appearances</span>
				</div>
				<div class="stat-card">
					<span class="stat-emoji">üé§</span>
					<span class="stat-number">50+</span>
					<span class="stat-label">Celebrity Interviews</span>
				</div>
			</div>

			<h3>What I Bring to the Table:</h3>
			<ul class="value-props">
				<li>
					<strong>Applied AI Research:</strong> Extensive expertise in Large Language Models (LLMs), NLP, and fine-tuning to solve complex organizational problems.
				</li>
				<li>
					<strong>Evidence-Based Design:</strong> A proven track record of collaborating with industry leaders like Costco, Dexcom, and Google to build user-centered, high-impact digital products.
				</li>
				<li>
					<strong>Education & Mentorship:</strong> Deeply committed to pedagogy, I develop and teach graduate and undergraduate courses on Python, Digital Product Design, and Managing IT.
